include ../html/jade-helpers.jade
!!! 5
head
	title contact zapotech
	meta(name="description", content="contact zapotech // a digital development agency - based in albion, new york")
	include ../html/head.jade

body#zapo
	a(href="#main", class="assistive-text") Skip to main content
	div.container
		include ../html/theme/global-header.jade

		section#main
			section#contact
				h2 let's work together and build something great
				form#contact-form(action="#", method="post")
					p
						label
							span name
							input(type="text")
					p
						label
							span email
							input(type="email")
					p
						label
							span message
							textarea(rows="8", placeholder="")
					input(type="submit", value="send")
			ul#contact-info
				li hello@zapo.tc
				li 585-520-2068
				li albion, new york
				
		include ../html/theme/global-footer.jade

	include ../html/foot.jade
</html>
